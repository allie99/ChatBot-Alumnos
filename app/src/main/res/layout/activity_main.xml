<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D3FBF3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:contentDescription="@string/logo"
            android:src="@drawable/seres" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:background="#7FD36C">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Encuentra las respuestas mas utiles aqui"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="110dp"
        android:layout_marginLeft="12dp"
        app:cardBackgroundColor="#50AEEC"
        app:cardCornerRadius="15dp">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/doc"
            android:layout_gravity="center"
            app:tint="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:text="Documentos"
            android:textStyle="bold"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:onClick="opcDos"
            android:layout_width="190dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            app:cardBackgroundColor="#50AEEC"
            app:cardCornerRadius="15dp">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/reinscripcion"
                android:layout_gravity="center"
                app:tint="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="Reinscripcion"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <androidx.cardview.widget.CardView
            android:onClick="opcTres"
            android:layout_width="190dp"
            android:layout_height="110dp"
            android:layout_marginLeft="12dp"
            app:cardBackgroundColor="#50AEEC"
            app:cardCornerRadius="15dp">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/evalucion"
                android:layout_gravity="center"
                app:tint="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="Evaluacion"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="190dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            app:cardBackgroundColor="#50AEEC"
            app:cardCornerRadius="15dp">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/permanencia"
                android:layout_gravity="center"
                app:tint="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="Permanencia"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <androidx.cardview.widget.CardView
                android:layout_width="190dp"
                android:layout_height="110dp"
                android:layout_marginLeft="12dp"
                app:cardBackgroundColor="#50AEEC"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/titulo"
                    android:layout_gravity="center"
                    app:tint="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="Titulacion"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="190dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                app:cardBackgroundColor="#50AEEC"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/trabajo"
                    android:layout_gravity="center"
                    app:tint="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="Servicio y Estancias"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:background="#7FD36C">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="No encuentras lo que buscas?"
            android:textStyle="bold"
            android:textColor="@color/black" />
    </LinearLayout>
        <Button
            android:onClick="opcChat"
            android:layout_width="230dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            app:backgroundTint="#50AEEC"
            android:text="Servicio al estudiante"
            android:textColor="@color/black" />

    </LinearLayout>
