<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            android:id="@+id/tv_message"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="4dp"
            android:background="@drawable/send_round_box"
            android:backgroundTint="#26A69A"
            android:padding="14dp">
        <TextView
                android:id="@+id/tvv_message"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="4dp"
                android:padding="14dp"
                android:text="This is a sample message that will appear"
                android:textColor="@android:color/white"
                android:textSize="14sp" tools:ignore="DuplicateIds"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/respuestaMessage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="4dp"
            android:background="@drawable/receive_round_box"
            android:backgroundTint="#FF7043"
            android:padding="14dp">
            <TextView
                    android:id="@+id/respuesta"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="4dp"
                    android:padding="14dp"
                    android:text="This is a sample message that will appear"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" tools:ignore="DuplicateIds"/>
            <ListView
                    android:id="@+id/opciones"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/tv_bot_message"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="4dp"
            android:background="@drawable/receive_round_box"
            android:backgroundTint="#FF7043"
            android:padding="14dp">
            <TextView
                    android:id="@+id/tvv_bot_message"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="4dp"
                    android:padding="14dp"
                    android:text="This is a sample message that will appear"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" tools:ignore="DuplicateIds"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>